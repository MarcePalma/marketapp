generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./src/marketapp/database.db"
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  quantity  Int
  price     Float
  discount  String
  codebar String
}
model Sale {
  id        Int      @id @default(autoincrement())
  productName  String
  price     Float
  quantity  Int
  saleDate  DateTime  @default(now())
}
